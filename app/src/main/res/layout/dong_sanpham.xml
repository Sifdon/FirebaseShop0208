<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:id="@+id/imageviewsanpham"
        android:scaleType="fitXY"
        android:layout_margin="5dp"
        android:layout_width="150dp"
        android:layout_height="120dp" />
    <RelativeLayout
        android:gravity="center"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/imageviewsanpham"
        android:layout_width="wrap_content"
        android:layout_height="120dp">
        <TextView
            android:id="@+id/textviewtensanpham"
            android:textColor="#331ab3"
            android:textSize="23sp"
            android:text="Tên sản phẩm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textviewgiasanpham"
            android:textColor="#f20"
            android:textSize="20sp"
            android:layout_below="@+id/textviewtensanpham"
            android:text="Giá sản phẩm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>